{{if data.tab == 1}}
	<h2>Welcome to Teascord! Please log in or create new account.</h2>
	<div>
		<span style="color: #e9c183">Login:</span> {{:data.stored_login}}
	</div>
	<div>
		<span style="color: #e9c183">Password:</span> {{:data.stored_password}}
	</div>
	{{:helper.link('Change login', 'pencil', {'edit_login' : 1})}}
	{{:helper.link('Change password', 'pencil', {'edit_password' : 1})}}
	{{:helper.link('Log In', 'locked', {'login' : 2})}}
	{{:helper.link('Sign In', 'pencil', {'select_tab' : 2})}}
	<div>{{:data.error_message}}</div>
{{else data.tab == 2}}
	<h2>Create new account.</h2>
	<div>
		<span style="color: #e9c183">Login:</span> {{:data.stored_login}}
	</div>
	<div>
		<span style="color: #e9c183">Password:</span> {{:data.stored_password}}
	</div>
	{{:helper.link('Change login', 'pencil', {'edit_login' : 1})}}
	{{:helper.link('Change password', 'pencil', {'edit_password' : 1})}}
	{{:helper.link('Create new account', '', {'new_acc' : 1})}}
	{{:helper.link('Back to login', '', {'select_tab' : 1})}}
	<div>{{:data.error_message}}</div>
{{/if}}
{{if data.tab > 2}}
	<div>
		<div>
			<span>Welcome, {{:data.nickname}}!</span><br>
		</div>
		<div>
			{{:helper.link('Contacts', '', {'select_tab' : 3}, data.tab == 3 ? 'disabled' : null)}}
			{{:helper.link('Settings', '', {'select_tab' : 4}, data.tab == 4 ? 'disabled' : null)}}
			{{:helper.link('Log Out', '', {'logout' : 1})}}
			<br><hr>
		</div>
	</div>
{{/if}}
{{if data.tab == 3}}
	<div class="item">
		<center><h3>Contacts</h3></span>
		<table style="width:100%">
			<tr><th style="width:10%">Login<th style="width:25%">Nickname<th style="width:20%">Options
				{{for data.contacts}}
					<tr>
					<td>{{:value.login}}
					<td>{{:value.nickname}}
					<td>{{:helper.link('Call', '', {'call' : value.ref})}}
				{{/for}}
		</table>
	</div>
{{else data.tab == 4}}
	<center>{{:helper.link('Delete Account', '', {'delete_acc' : 1})}}</center>
{{/if}}
